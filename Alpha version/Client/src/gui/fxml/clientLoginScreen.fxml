<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane styleClass="loginD-root"
	stylesheets="@clientLoginStyles.css"
	xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="">
	<children>
		<ImageView fitHeight="827.0" fitWidth="1280.0"
			opacity="0.08" styleClass="loginD-backgroundImage">
			<image>
				<Image url="@resources/images/pexels-elevate-1267320.jpg" />
			</image>
		</ImageView>
		<BorderPane prefHeight="720" prefWidth="1280">
			<top>
				<VBox alignment="CENTER" spacing="6">
					<padding>
						<Insets bottom="18" left="0" right="0" top="40" />
					</padding>
					<children>
						<ImageView fitHeight="179.0" fitWidth="179.0">
							<image>
								<Image url="@resources/bistro_logo.png" />
							</image>
						</ImageView>
						<Label styleClass="loginD-subtitle"
							text="Welcome to our Restaurant" />
					</children>
				</VBox>
			</top>
			<center>
				<HBox alignment="CENTER" spacing="28"
					BorderPane.alignment="CENTER">
					<padding>
						<Insets bottom="0" left="0" right="0" top="0" />
					</padding>
					<children>
						<VBox alignment="CENTER" minHeight="485.0" prefHeight="485.0"
							spacing="14" styleClass="loginD-card">
							<children>
								<StackPane styleClass="loginD-iconCircle">
									<children>
										<ImageView fitHeight="28" fitWidth="28"
											preserveRatio="true">
											<image>
												<Image url="@resources/PersonIcon.png" />
											</image>
										</ImageView>
									</children>
								</StackPane>
								<Label styleClass="loginD-cardTitle" text="Member" />
								<Label styleClass="loginD-cardHint" text="Welcome back!" />
								<VBox spacing="6" styleClass="loginD-form">
									<children>
										<Label styleClass="loginD-label" text="Member ID / Code" />
										<TextField fx:id="memberCodeField"
											promptText="Enter your member code" styleClass="loginD-input" />
									</children>
								</VBox>
								<Button onAction="#onSignIn" prefHeight="43.0"
									prefWidth="409.0" text="Sign In">
									<styleClass>
										<String fx:value="btn-wide" />
										<String fx:value="btn-primary" />
									</styleClass>
								</Button>
								<HBox alignment="CENTER" spacing="10"
									styleClass="loginD-orRow">
									<children>
										<Label styleClass="loginD-orText" text="╾ or ╾" />
									</children>
								</HBox>
								<Button onAction="#onScanQr" text="Scan QR Code">
									<styleClass>
										<String fx:value="btn-wide" />
										<String fx:value="btn-outline-soft" />
									</styleClass>
									<graphic>
										<ImageView fitHeight="24.0" fitWidth="24.0">
											<image>
												<Image url="@resources/lucide--qr-code.png" />
											</image>
										</ImageView>
									</graphic>
								</Button>
							</children>
						</VBox>
						<VBox alignment="CENTER" spacing="14"
							styleClass="loginD-card">
							<children>
								<StackPane styleClass="loginD-iconCircle">
									<children>
										<ImageView fitHeight="28" fitWidth="28"
											preserveRatio="true">
											<image>
												<Image url="@resources/EnterAsGuestIcon.png" />
											</image>
										</ImageView>
									</children>
								</StackPane>
								<Label styleClass="loginD-cardTitle" text="Guest" />
								<Label styleClass="loginD-cardHint"
									text="First time here?" />
								<VBox alignment="CENTER" spacing="12"
									styleClass="loginD-form">
									<children>
										<VBox spacing="6">
											<children>
												<Label styleClass="loginD-label" text="Phone Number" />
												<TextField fx:id="guestPhoneField"
													promptText="Enter phone number" styleClass="loginD-input" />
											</children>
										</VBox>
										<VBox spacing="6">
											<children>
												<Label styleClass="loginD-label"
													text="Email (Optional)" />
												<TextField fx:id="guestEmailField"
													promptText="Enter email address" styleClass="loginD-input" />
											</children>
										</VBox>
									</children>
								</VBox>
								<Button onAction="#onContinueGuest"
									text="Continue as Guest">
									<styleClass>
										<String fx:value="btn-wide" />
										<String fx:value="btn-primary" />
									</styleClass>
								</Button>
							</children>
						</VBox>
					</children>
				</HBox>
			</center>
			<bottom>
				<BorderPane BorderPane.alignment="CENTER">
					<left>
						<HBox alignment="BOTTOM_LEFT">
							<children>
								<Label styleClass="footer-label"
									text="© 2025 Bistro · All rights reserved · v1.0.0"
									textFill="WHITE" />
							</children>
							<padding>
								<Insets bottom="16" left="24" right="0" top="0" />
							</padding>
						</HBox>
					</left>
					<right>
						<HBox alignment="BOTTOM_RIGHT" spacing="8">
							<padding>
								<Insets bottom="16" left="0" right="32" top="0" />
							</padding>
							<children>
								<Hyperlink onAction="#onEmployeeAdminLogin"
									styleClass="loginD-link" text="Employee &amp; Manager Login" />
							</children>
						</HBox>
					</right>
				</BorderPane>
			</bottom>
		</BorderPane>
	</children>
</StackPane>
