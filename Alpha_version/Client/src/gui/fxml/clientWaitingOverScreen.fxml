<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<StackPane styleClass="ready-root" stylesheets="@../../gui/css/clientWaitingOverStyles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.logic.WaitingListTableReadyScreen">

    <children>
        <BorderPane prefHeight="720" prefWidth="1280">

            <center>
                <StackPane BorderPane.alignment="CENTER">
                    <children>

                        <VBox alignment="TOP_CENTER" spacing="18" styleClass="ready-card">
                            <padding>
                                <Insets bottom="28" left="34" right="34" top="28" />
                            </padding>

                            <StackPane styleClass="check-circle">
                                <children>
                                    <Label styleClass="check-mark" text="✓" />
                                </children>
                            </StackPane>

                            <Label styleClass="title" text="Your Table is Ready!" />

                            <!-- Big ring + number -->
                            <StackPane styleClass="ring-wrap">
                                <children>
                                    <Circle radius="120" styleClass="ring" />
                                    <Label fx:id="lblTableNum" styleClass="ring-number" text="29" />
                                </children>
                            </StackPane>

                            <Label styleClass="subtitle" text="Please proceed to your table immediately." />

                            <Button fx:id="btnFinish" onAction="#btnFinish" styleClass="btn-primary" text="Finish" />

                        </VBox>

                    </children>
                </StackPane>
            </center>
         <bottom>
            <BorderPane BorderPane.alignment="CENTER">
               <left>
                  <HBox alignment="BOTTOM_LEFT">
                     <children>
                        <Label styleClass="footer-label" text="© 2025 Bistro · All rights reserved · v1.0.0" textFill="WHITE" />
                     </children>
                     <padding>
                        <Insets bottom="16" left="24" right="0" top="0" />
                     </padding>
                  </HBox>
               </left>
            </BorderPane>
         </bottom>

        </BorderPane>
    </children>
   <stylesheets>
      <URL value="@../css/waiting_list_table_ready.css" />
      <URL value="@clientWaitingOverStyles.css" />
   </stylesheets>
</StackPane>
