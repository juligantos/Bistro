<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../css/staff/clientStaffDashboardStyles.css, @../../css/staff/ReservationsPanelStyles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.logic.staff.ReservationsPanel">

    <padding>
        <Insets bottom="18" left="18" right="18" top="18" />
    </padding>

    <top>
        <VBox spacing="14" BorderPane.alignment="CENTER">
            <VBox spacing="4">
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e293b;" text="Reservations Management" />
                <Label style="-fx-text-fill: #64748b;" text="View and manage daily reservations" />
            </VBox>

            <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: white; -fx-padding: 12; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 4, 0, 0, 1);">
                
                <Label text="Search:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtSearch" promptText="Name, Code or ID..." prefWidth="200" />
                
                <Region prefWidth="10" /> <Label text="Date:" style="-fx-font-weight: bold;"/>
                <DatePicker fx:id="dateFilter" onAction="#onDateChanged" prefWidth="140" />
                <Button fx:id="btnRefresh" onAction="#btnRefresh" text="âŸ³" />

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="btnNewReservation" onAction="#btnNewReservation" text="+ New Reservation" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="reservationsTable" style="-fx-background-radius: 8; -fx-border-radius: 8;" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colDate" prefWidth="90" text="Date" />
                <TableColumn fx:id="colTime" prefWidth="70" text="Time" />
                <TableColumn fx:id="colOrderId" prefWidth="70" text="ID" />
                <TableColumn fx:id="colCustomerType" prefWidth="90" text="Type" />
                <TableColumn fx:id="colConfirm" prefWidth="100" text="Code" />
                <TableColumn fx:id="colDiners" prefWidth="60" text="Pax" />
                <TableColumn fx:id="colTable" prefWidth="70" text="Table #" />
                <TableColumn fx:id="colStatus" prefWidth="110" text="Status" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets top="14" />
            </BorderPane.margin>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="14" style="-fx-padding: 14 0 0 0;" BorderPane.alignment="CENTER">
            <Button fx:id="btnCancelRes" onAction="#btnCancelRes" style="-fx-background-color: #fee2e2; -fx-text-fill: #b91c1c;" text="Cancel Reservation" />
            <Button fx:id="btnMarkSeated" onAction="#btnMarkSeated" style="-fx-background-color: #2563eb; -fx-text-fill: white;" text="Mark as Seated" />
        </HBox>
    </bottom>

</BorderPane>