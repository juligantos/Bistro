<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../../css/staff/TableOverviewPanelStyles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.logic.FloorPlanOverviewScreen">

    <center>
        <VBox spacing="16" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="16" left="16" right="16" top="16" />
            </padding>
            <children>

                <!-- Header -->
                <VBox spacing="4">
                    <children>
                        <Label styleClass="sm-title" text="Table Overview" />
                        <Label styleClass="sm-subtitle" text="Real-time table status and waiting list" />
                    </children>
                </VBox>

                <!-- Status summary cards -->
                <HBox spacing="12">
                    <children>
                        <!-- Available -->
                        <VBox spacing="4" styleClass="sm-stat-card">
                            <children>
                                <Label styleClass="sm-stat-label" text="Available Tables" />
                                <Label fx:id="lblAvailable" styleClass="sm-stat-value" text="0" />
                            </children>
                        </VBox>

                        <!-- Occupied -->
                        <VBox spacing="4" styleClass="sm-stat-card">
                            <children>
                                <Label styleClass="sm-stat-label" text="Occupied Tables" />
                                <Label fx:id="lblOccupied" styleClass="sm-stat-value" text="0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Main grid + waiting list -->
                <HBox spacing="16">
                    <children>
                        <!-- Floor grid -->
                        <VBox spacing="10" styleClass="sm-stat-card">
                            <children>
                                <Label styleClass="sm-card-title" text="Restaurant Floor" />

                                <ScrollPane fitToWidth="true" prefViewportHeight="420">
                                    <content>
                                        <TilePane fx:id="tablesPane" hgap="10" prefColumns="4" vgap="10" />
                                    </content>
                                </ScrollPane>

                                <!-- Legend -->
                                <VBox spacing="6">
                                    <children>
                                        <Region prefHeight="1" style="-fx-background-color:#e5e7eb;" />
                                        <Label styleClass="sm-legend-label" text="Status Legend:" />
                                        <HBox spacing="16">
                                            <children>
                                                <HBox spacing="6">
                                                    <children>
                                                        <Region prefHeight="12" prefWidth="12">
                                             <styleClass>
                                                <String fx:value="sm-legend-dot" />
                                                <String fx:value="sm-dot-available" />
                                             </styleClass></Region>
                                                        <Label styleClass="sm-legend-text" text="Available" />
                                                    </children>
                                                </HBox>
                                                <HBox spacing="6">
                                                    <children>
                                                        <Region prefHeight="12" prefWidth="12">
                                             <styleClass>
                                                <String fx:value="sm-legend-dot" />
                                                <String fx:value="sm-dot-occupied" />
                                             </styleClass></Region>
                                                        <Label styleClass="sm-legend-text" text="Occupied" />
                                                    </children>
                                                </HBox>
                                                <HBox spacing="6">
                                                    <children>
                                                        <Region prefHeight="12" prefWidth="12">
                                             <styleClass>
                                                <String fx:value="sm-dot-reserved" />
                                                <String fx:value="sm-legend-dot" />
                                             </styleClass></Region>
                                                        <Label styleClass="sm-legend-text" text="Reserved" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>
</BorderPane>
