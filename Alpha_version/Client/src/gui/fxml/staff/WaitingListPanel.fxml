<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="14" styleClass="wl-root" stylesheets="@../../css/staff/WaitingListPanelStyles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.logic.staff.WaitingListPanel">
  <padding>
    <Insets bottom="18" left="18" right="18" top="18" />
  </padding>
  <!-- Header -->
  <VBox spacing="4">
    <Label styleClass="wl-title" text="Waiting List" />
    <Label styleClass="wl-subtitle" text="Manage customer queue and wait times" />
  </VBox>
  <!-- Stats row -->
  <HBox spacing="14">
    <HBox prefHeight="77.0" prefWidth="89.0" spacing="10" HBox.hgrow="ALWAYS">
      <VBox prefHeight="49.0" prefWidth="223.0" spacing="6" HBox.hgrow="ALWAYS">
        <Label styleClass="wl-stat-label" text="Total in WaitList" />
        <Label fx:id="lblTotalInQueueLabel" styleClass="wl-stat-value" text="0" />
      </VBox>
      <styleClass>
        <String fx:value="wl-stat" />
        <String fx:value="wl-left-orange" />
      </styleClass>
    </HBox>
    <HBox spacing="10" styleClass="wl-stat wl-left-blue" HBox.hgrow="ALWAYS">
      <VBox prefHeight="77.0" prefWidth="110.0" spacing="6" HBox.hgrow="ALWAYS">
        <Label styleClass="wl-stat-label" text="Notified to seat" />
        <Label fx:id="lblTotalNotifiedLabel" styleClass="wl-stat-value" text="0" />
        <styleClass>
          <String fx:value="wl-stat" />
          <String fx:value="wl-left-purple" />
        </styleClass>
      </VBox>
    </HBox>
  </HBox>
  <!-- Search bar -->
  <HBox alignment="CENTER_LEFT" spacing="12" styleClass="wl-search-card">
    <TextField fx:id="txtSearchField" prefHeight="37.0" prefWidth="300.0" promptText="Search by customer name or queue number..." styleClass="wl-search-field" HBox.hgrow="ALWAYS" />
      <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#btnRefresh" styleClass="wl-btn" text="Refresh List" />
    <Button fx:id="btnAddToWaitlist" onAction="#btnAddToWaitlist" styleClass="wl-add-btn" text="Add to Waitlist" />
  </HBox>
  <!-- Table -->
  <VBox spacing="10" styleClass="wl-card" VBox.vgrow="ALWAYS">
    <Label fx:id="lblQueueTitleLabel" styleClass="wl-card-title" text="Current Queue (0)" />
    <TableView fx:id="waitingTable" styleClass="wl-table" VBox.vgrow="ALWAYS">
      <columns>
        <TableColumn fx:id="colQueue" prefWidth="120.0" text="Confirmation Code" />
        <TableColumn fx:id="colName" prefWidth="100.0" text="Customer" />
        <TableColumn fx:id="colMember" prefWidth="80.0" text="Member" />
        <TableColumn fx:id="colParty" prefWidth="65.0" text="Diners" />
        <TableColumn fx:id="colJoined" prefWidth="85.0" text="Joined" />
        <TableColumn fx:id="colStatus" prefWidth="85.0" text="Status" />
      </columns>
    </TableView>
    <!-- NEW: Actions bar (works on selected row) -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
      <Button fx:id="btnRemoveFromWaitlist" onAction="#btnRemoveFromWaitlist" styleClass="wl-btn-remove" text="Remove From Waiting List" />
    </HBox>
  </VBox>
</VBox>
